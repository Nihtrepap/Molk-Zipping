                      AlternatingRowBackground="White" FontSize="14"
                      FontStyle="Normal" BorderBrush="White"
                      GridLinesVisibility="Vertical"
                      RowBackground="#C0BCC4" RowHeaderWidth="0"/>

            <RadioButton GroupName="Select_Folder_File" x:Name="SelectFolder" Content="Folder" HorizontalAlignment="Left" Margin="548,95,0,0" VerticalAlignment="Top" IsChecked="True" Checked="Radiobutton_Checked" FontWeight="Bold" Foreground="#FF403273" />
            <RadioButton GroupName="Select_Folder_File" x:Name="SelectFile" Content="File" HorizontalAlignment="Left" Margin="548,111,0,0" VerticalAlignment="Top" Checked="Radiobutton_Checked" FontWeight="Bold" Foreground="#FF403273"/>
            <TextBlock HorizontalAlignment="Left" Margin="548,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" FontWeight="Bold" FontSize="14" Name="SelectChoose" Text="Choose how to open:" Foreground="#FF403273"/>

            <TextBlock HorizontalAlignment="Left" Margin="548,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" FontWeight="Bold" FontSize="14" Name="SaveToBigText" Text="Save to directory." Foreground="#FF403273"/>
            <Button Click="Button_Click" Cursor="Hand" x:Name="BtnSaveTo"  
                VerticalAlignment="Top" Height="30" 
                Background="#403273" Margin="548,168,174,0" 
                    Style="{StaticResource RadiusButton}">
                <Image Source="Assets/OrientationIcons/save.png" Width="20" />
            </Button>
            <TextBlock x:Name="SaveToText" HorizontalAlignment="Left" Margin="548,198,0,0" Text="Select a folder to save your molk file" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF403273" Width="226" Height="42" FontSize="11"/>


        </Grid>
        <!-- THIS IS THE UNPACK SECTION -->
        <Grid x:Name="Unpack" Visibility="Visible">
            <Button Click="Button_Click" Cursor="Hand" x:Name="BtnUnPackFiles" Style="{StaticResource RadiusButton}" 
                VerticalAlignment="Top" Height="122" 
                Background="#403273" Margin="662,387,10,0">
                <Image Source="Assets/OrientationIcons/unpack.png" Width="88"/>
            </Button>
            <Button Click="Button_Click" Cursor="Hand" x:Name="BtnChooseUnpackFiles" Style="{StaticResource RadiusButton}" 
                VerticalAlignment="Top" Height="122" 
                Background="#403273" Margin="527,387,135,0">
                <Image Source="Assets/OrientationIcons/chooseFile.png" Width="88"/>
            </Button>
            <TextBlock HorizontalAlignment="Left" Margin="130,22,0,0"  
                   VerticalAlignment="Top" Height="81" 
                   Width="287" Foreground="#FF251240" 
                   Text="UNPACK FILES" FontFamily="Tahoma"
                   FontSize="38" FontWeight="Thin" 
                   Padding="0"/>
            <Button Cursor="Hand" x:Name="BtnBackUnPack" HorizontalAlignment="Left" 
               Height="80" Margin="25,409,0,0"
               VerticalAlignment="Top" Width="80"
               Click="Button_Click" 
                    Style="{StaticResource RadiusButton}">
                <Image Source="Assets/OrientationIcons/backBtn.png" Width="68" OpacityMask="Black"/>
            </Button>
            <Image Source="Assets/Images/molk.png" HorizontalAlignment="Left" 
               Height="100" Margin="25,20,0,0" 
               VerticalAlignment="Top" Width="100"/>
            <DataGrid x:Name="GridUnpack" HorizontalAlignment="Left" Height="42" MinRowHeight="30" VerticalAlignment="Top" Width="295" Margin="25,93,0,0" Focusable="False" HeadersVisibility="Column" GridLinesVisibility="Vertical" HorizontalGridLinesBrush="{x:Null}" VerticalGridLinesBrush="#FF1F1526" MinColumnWidth="30">
                <DataGrid.BorderBrush>
                    <SolidColorBrush Color="#FF688CAF" Opacity="0"/>
                </DataGrid.BorderBrush>
            </DataGrid>
            <TextBlock x:Name="TxtInsideMolk" HorizontalAlignment="Left" Margin="25,140,0,0" TextWrapping="Wrap" Text="Files inside" VerticalAlignment="Top" Height="242" Width="506" Foreground="#FF1F1526" Background="#FFC0BCC4" Cursor="Pen" IsEnabled="False"/>

        </Grid>
