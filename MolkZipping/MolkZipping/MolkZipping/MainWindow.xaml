<Window x:Class="MolkZipping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MolkZipping"
        mc:Ignorable="d"
        Title="MainWindow"  Height="550" Width="800" Background="White" Foreground="White">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styling/StyleSheet.xaml"/>
                <ResourceDictionary Source="Styling/BlendStyleSheet.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Storyboard x:Key="BtnPack">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="BtnUnpack">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="316.5"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="question">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="112.5"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="Instagram">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-46.5"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="Facebook">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-45"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="Web">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-43.5"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="Exit">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="108"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="PackText">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1"/>
                </DoubleAnimationUsingKeyFrames>
                <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" Storyboard.TargetName="BtnPack">
                    <EasingColorKeyFrame KeyTime="0:0:0.4" Value="#FFD1521B"/>
                </ColorAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="BtnUnpack">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="BtnPack">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-330"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="Instagram">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-63"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="Facebook">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-63"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="Web">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-61.5"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="question">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="117"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="Exit">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="102"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="UnpackText">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1"/>
                </DoubleAnimationUsingKeyFrames>
                <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" Storyboard.TargetName="BtnUnpack">
                    <EasingColorKeyFrame KeyTime="0:0:0.4" Value="#FFD1521B"/>
                </ColorAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="BtnQuestion">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="question">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="22.235"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-15.444"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="17.799"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="-12.728"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:1" Value="-0.434"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="HelpText">
                    <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="1"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="BtnExit">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ExitText">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="Exit">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-1.665"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0.666"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.7" Value="-1.332"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.9" Value="0.333"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="LogoStart">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="textBlock">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="-372"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="-327"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="Instagram">
            <BeginStoryboard x:Name="InstagramIcon_BeginStoryboard" Storyboard="{StaticResource InstagramIcon}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="Instagram">
            <RemoveStoryboard BeginStoryboardName="InstagramIcon_BeginStoryboard"/>
            <RemoveStoryboard BeginStoryboardName="InstagramIcon_BeginStoryboard"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="Facebook">
            <RemoveStoryboard BeginStoryboardName="FacebookIcon_BeginStoryboard"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="Facebook">
            <BeginStoryboard x:Name="FacebookIcon_BeginStoryboard" Storyboard="{StaticResource FacebookIcon}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="Web">
            <BeginStoryboard x:Name="Webicon_BeginStoryboard" Storyboard="{StaticResource Webicon}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="Web">
            <RemoveStoryboard BeginStoryboardName="Webicon_BeginStoryboard"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="BtnPack">
            <BeginStoryboard x:Name="BtnPack_BeginStoryboard" Storyboard="{StaticResource BtnPack}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="BtnPack">
            <RemoveStoryboard BeginStoryboardName="BtnPack_BeginStoryboard"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="BtnUnpack">
            <BeginStoryboard x:Name="BtnUnpack_BeginStoryboard" Storyboard="{StaticResource BtnUnpack}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="BtnUnpack">
            <RemoveStoryboard BeginStoryboardName="BtnUnpack_BeginStoryboard"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="question">
            <BeginStoryboard x:Name="BtnQuestion_BeginStoryboard" Storyboard="{StaticResource BtnQuestion}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="question">
            <RemoveStoryboard BeginStoryboardName="BtnQuestion_BeginStoryboard"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="Exit">
            <BeginStoryboard x:Name="BtnExit_BeginStoryboard" Storyboard="{StaticResource BtnExit}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="Exit">
            <RemoveStoryboard BeginStoryboardName="BtnExit_BeginStoryboard"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LogoStart}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid Name="Main" Visibility="Visible">

            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.651"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Button Click="Button_Click" x:Name="BtnUnpack"  Style="{StaticResource RadiusButton}" VerticalAlignment="Top" Height="122" Background="#403273" Margin="492,214,100,0" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Image Source="Assets/OrientationIcons/unpack.png" Width="88"/>
            </Button>
            <Button Click="Button_Click" x:Name="BtnPack"  Style="{StaticResource RadiusButton}" VerticalAlignment="Top" Height="122" Background="#403273" Margin="100,214,492,0" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Image Source="Assets/OrientationIcons/Pack.png" Width="88"/>
            </Button>
            <Image MouseDown="Button_Click" x:Name="question" Source="Assets/OrientationIcons/question.png" HorizontalAlignment="Left" Height="64" Margin="365,407,0,0" VerticalAlignment="Top" Width="64" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>

            </Image>

            <Image x:Name="Exit" Source="Assets/OrientationIcons/exit.png" HorizontalAlignment="Left" Height="32" Margin="750,10,0,0" VerticalAlignment="Top" Width="32" OpacityMask="White" RenderTransformOrigin="0.5,0.5" MouseDown="Button_Click">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>

            </Image>

            <Image MouseDown="Button_Click" x:Name="Instagram" Source="Assets/SocialIcons/instagram.png" HorizontalAlignment="Left" Height="28" Margin="10,392,0,0" VerticalAlignment="Top" Width="28" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image MouseDown="Button_Click" x:Name="Facebook" Source="Assets/SocialIcons/facebook.png" HorizontalAlignment="Left" Height="28" Margin="10,432,0,0" VerticalAlignment="Top" Width="28" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image MouseDown="Button_Click" x:Name="Web" Source="Assets/SocialIcons/web.png" HorizontalAlignment="Left" Height="28" Margin="10,471,0,0" VerticalAlignment="Top" Width="28" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image Source="Assets/Images/molk.png" HorizontalAlignment="Left" Height="100" Margin="298,34,0,0" VerticalAlignment="Top" Width="200"/>

            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="WECLOME TO" VerticalAlignment="Top" Margin="157,75,0,0" RenderTransformOrigin="0.5,0.5" Width="78" Foreground="#FFC0BCC4">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.396"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="809,53,-231,0"  VerticalAlignment="Top" Height="81" Width="214" Foreground="#FF251240" Text="ZIPPING" FontFamily="Tahoma" FontSize="48" FontWeight="Thin" Padding="0" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="1" Color="White" BlurRadius="2"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="PackText" HorizontalAlignment="Left" Margin="326,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF403273" FontFamily="Microsoft New Tai Lue" FontWeight="Bold" FontSize="24" Height="70" Visibility="Visible" Opacity="0" Width="141"><Run Text="   "/><Run Text="Press to"/><LineBreak/><Run Text=" "/><Run Text="  "/><Run Text="pack files"/></TextBlock>
            <TextBlock x:Name="UnpackText" HorizontalAlignment="Left" Margin="326,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF403273" FontFamily="Microsoft New Tai Lue" FontWeight="Bold" FontSize="24" Height="74" Visibility="Visible" Opacity="0"><Run Text="   "/><Run Text="Press to"/><LineBreak/><Run Text=" unpack files"/></TextBlock>

            <TextBlock x:Name="HelpText" Margin="298,357,294,117" TextWrapping="Wrap" Width="200" Foreground="#FFD1521B" FontFamily="Microsoft New Tai Lue" FontSize="20" Opacity="0"  ><Run Text="       "/><Run Text="Press for help!"/></TextBlock>
            <TextBlock x:Name="ExitText" HorizontalAlignment="Left" Margin="753,47,0,0" TextWrapping="Wrap" Text="Exit" VerticalAlignment="Top" FontFamily="Tahoma" Foreground="#FFD1521B" FontSize="16" Opacity="0"/>
            <Button Click="Button_Click" x:Name="BtnMenu" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="28" Height="28" BorderThickness="0" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{x:Null}"  >
                <Image Source="Assets/OrientationIcons/menu.png" Width="28" Height="28"/>
            </Button>


        </Grid>
        <Grid Name="Pack" Visibility="Hidden">
            <Button x:Name="BtnPackFiles"  Style="{StaticResource RadiusButton}" 
                VerticalAlignment="Top" Height="122" 
                Background="#403273" Margin="662,387,10,0">
                <Image Source="Assets/OrientationIcons/pack.png" Width="88"/>
            </Button>
            <Button x:Name="BtnChoosePackFile" Style="{StaticResource RadiusButton}" 
                VerticalAlignment="Top" Height="122" 
                Background="#403273" Margin="527,387,135,0">
                <Image Source="Assets/OrientationIcons/chooseFile.png" Width="88"/>
            </Button>
            <TextBlock HorizontalAlignment="Left" Margin="130,22,0,0"  
                   VerticalAlignment="Top" Height="81" 
                   Width="214" Foreground="#FF251240" 
                   Text="PACK FILES" FontFamily="Tahoma"
                   FontSize="38" FontWeight="Thin" 
                   Padding="0"/>
            <Image x:Name="BtnBackPack" Source="Assets/OrientationIcons/backBtn.png" HorizontalAlignment="Left" 
               Height="100" Margin="10,409,0,0" 
               VerticalAlignment="Top" Width="100"
               MouseDown="Button_Click" Cursor="Hand"/>
            <Image Source="Assets/Images/molk.png" HorizontalAlignment="Left" 
               Height="100" Margin="25,20,0,0" 
               VerticalAlignment="Top" Width="100"/>
            <DataGrid x:Name="GridPack" HorizontalAlignment="Left" Height="304" VerticalAlignment="Top" Width="502" Margin="25,78,0,0"/>

        </Grid>
        <Grid Name="Unpack" Visibility="Hidden">
            <Button x:Name="BtnUnPackFiles"  Style="{StaticResource RadiusButton}" 
                VerticalAlignment="Top" Height="122" 
                Background="#403273" Margin="662,387,10,0">
                <Image Source="Assets/OrientationIcons/unpack.png" Width="88"/>
            </Button>
            <Button x:Name="BtnChooseUnpackFiles" Style="{StaticResource RadiusButton}" 
                VerticalAlignment="Top" Height="122" 
                Background="#403273" Margin="527,387,135,0">
                <Image Source="Assets/OrientationIcons/chooseFile.png" Width="88"/>
            </Button>
            <TextBlock HorizontalAlignment="Left" Margin="130,22,0,0"  
                   VerticalAlignment="Top" Height="81" 
                   Width="287" Foreground="#FF251240" 
                   Text="UNPACK FILES" FontFamily="Tahoma"
                   FontSize="38" FontWeight="Thin" 
                   Padding="0"/>
            <Image x:Name="BtnBackUnpack" Source="Assets/OrientationIcons/backBtn.png" HorizontalAlignment="Left" 
               Height="100" Margin="10,409,0,0" 
               VerticalAlignment="Top" Width="100"
               MouseDown="Button_Click" Cursor="Hand"/>
            <Image Source="Assets/Images/molk.png" HorizontalAlignment="Left" 
               Height="100" Margin="25,20,0,0" 
               VerticalAlignment="Top" Width="100"/>
            <DataGrid x:Name="GridUnpack" HorizontalAlignment="Left" Height="304" VerticalAlignment="Top" Width="502" Margin="25,78,0,0"/>

        </Grid>
        <Grid Name="Advanced" Visibility="Hidden" Margin="0,0,87,491">
            <Menu x:Name="MenuBar" Background="#D1521B"  Margin="0,0,485,0" >
                <MenuItem Style="{StaticResource MenuItemStyle}"  Header="Color theme">
                    <MenuItem Style="{StaticResource MenuItemStyle}"   IsCheckable="True" Header="Dark"/>
                    <MenuItem Style="{StaticResource MenuItemStyle}"  IsCheckable="True" Header="Light"/>
                </MenuItem>
                <MenuItem Style="{StaticResource MenuItemStyle}"  Header="Settings">
                    <MenuItem Style="{StaticResource MenuItemStyle}"  Header="Language">
                        <MenuItem Style="{StaticResource MenuItemStyle}"  IsCheckable="True" Header="Swedish"></MenuItem>
                        <MenuItem Style="{StaticResource MenuItemStyle}"  IsCheckable="True" Header="English"></MenuItem>
                        <MenuItem Style="{StaticResource MenuItemStyle}" IsCheckable="True" Header="Japanese"></MenuItem>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </Grid>
    </Grid>
</Window>
